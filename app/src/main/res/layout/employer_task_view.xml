<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/employerTaskViewLayout"
    tools:context=".EmployerTaskActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        tools:context=".MyActivity">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employerTaskTextView"
        android:layout_centerHorizontal="true"
        android:text="@string/tasks"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:labelFor="@id/editText"
        android:layout_marginTop="25dp" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="300dp" />

    <Button
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskViewClearButton"
        android:text="@string/clear"
        android:textSize="20sp"
        android:layout_below="@+id/employerTaskTextView"
        android:layout_marginTop="350dp"
        android:layout_marginStart="70dp"
        android:onClick="changeLayout"/>

    <Button
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskViewBackButton"
        android:text="@string/back"
        android:textSize="20sp"
        android:layout_below="@+id/employerTaskTextView"
        android:layout_marginStart="220dp"
        android:layout_marginTop="350dp"
        android:onClick="changeLayout"/>

</RelativeLayout>